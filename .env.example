# ============================================
# YouEdu - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
# https://supabase.com/dashboard/project/_/settings/api

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (safe for frontend)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (BACKEND ONLY - never expose to frontend!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# FRONTEND (VITE) CONFIGURATION
# ============================================
# Note: Vite requires VITE_ prefix for client-side variables

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_API_BASE_URL=http://localhost:8000/api

# ============================================
# AI SERVICES
# ============================================

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Google Cloud Speech-to-Text (optional)
# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# AssemblyAI API Key (optional - fallback transcription)
# Get from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# ============================================
# SERVER CONFIGURATION
# ============================================

# Backend server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment (development | staging | production)
NODE_ENV=development

# ============================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================

# Max requests per minute per IP
# RATE_LIMIT_PER_MINUTE=60
